<div class="page-header">
  <h1>Kate's Book List</h1>
</div>

{{! partial for main user control}}
{{> control}}


<div class="row">
  <h4>{{message}}</h4>
  {{#each book}}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><a id="title" name="title" href="/detail/{{id}}">{{title}}</a> <span class="badge pull-right">{{#if sold}}sold{{/if}}</span></h3>
    </div>
    <div class="panel-body">
      <p>Author: <span>{{author}}</span></p>
      <p>Price: <span>{{price}}</span></p>
    </div>
  </div>
  {{/each}}
  
  {{#if btn_total}}
  <a href="/" id="btn_total">See total books</a>
  {{/if}}
</div>