<div class="page-header">
  <h1>Kate's itc298 project</h1>
</div>

<div class="row">
  <p>
    <form class="form-inline" method="POST" id="main-form">
      <div class="form-group">
        <label class="sr-only" for="search" >Search</label>
        <input type="text" class="form-control" name="userInput" required="true" placeholder="Enter Book Title">
      </div>
      <button type="submit" class="btn btn-default" id="btn-search">Search</button>
      <button type="submit" class="btn btn-default" id="btn-delete">Delete</button>
      <button type="submit" class="btn btn-default" id="btn-update">Update</button>
      <a href="/add" class="btn btn-success pull-right">Add a book</a>
    </form>
  </p>
</div>

<div class="row">
  <h4>{{message}}</h4>
  {{#each book}}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">{{title}}</h3>
    </div>
    <div class="panel-body">
      <p>Author: <span>{{author}}</span></p>
      <p>Price: <span>{{price}}</span></p>
    </div>
  </div>
  {{/each}}
  
  {{#if btn_total}}
  <a href="/" id="btn_total">See total books</a>
  {{/if}}
</div>



<script>
  $( document ).ready(function() {
  
  $("#btn-search").click(function(){
     $("#main-form").attr("action", "/search");
  });
   
  $("#btn-delete").click(function(){
     $("#main-form").attr("action", "/delete");
  });
   
  $("#btn-update").click(function(){
     $("#main-form").attr("action", "/update");
  });
  
  });
</script>