<div class="page-header">
  <h1>Kate's itc298 project</h1>
</div>

<div class="page-header">
  <h2>Book Details</h2>
</div>

<form class="form-horizontal" method="POST" action="/updateProcess">
  
  <!--ID value cannot be updated -->
  {{#myItem}}
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <p class="form-control-static" >{{title}}</p>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-sm-2 control-label">Author</label>
    <div class="col-sm-10">
      <p class="form-control-static" >{{author}}</p>
    </div>
  </div>
  
  <div class="form-group">
    <label for="inputPrice" class="col-sm-2 control-label">Price</label>
    <div class="col-sm-10">
        <p class="form-control-static" ><span>$</span>{{price}}</p>
    </div>
  </div>
  
  <div class="form-group">
    <label for="inputSold" class="col-sm-2 control-label">Sold</label>
    <div class="col-sm-10">
        <p class="form-control-static" >{{sold}}</p>
    </div>
  </div>
  
  {{/myItem}}
  <!--DateAdded value cannot be updated -->

  {{#if btn_total}}
  <a href="/" id="btn_total">See total books</a>
  {{/if}}
</form>
