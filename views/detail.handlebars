<div class="page-header">
  <h1>Book Details</h1>
</div>

<form class="form-horizontal" method="POST" action="/update">
  {{#if message}}<h4>{{message}}</h4>{{/if}}
  <!--ID value cannot be updated -->
  {{#theBook}}
  <div class="form-group">
    <label class="col-sm-2 control-label h4">Title</label>
    <div class="col-sm-10">
      <h4 class="form-control-static" id="title">{{title}}</h4>
      <input type="hidden" id="id" name="id" value="{{id}}">
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-sm-2 control-label">Image</label>
    <div class="col-sm-10">
      {{#unless photoUrl}}
        <img src="/book-photo/no-image.png" alt="temp" style="width:150px; height:auto;">
      {{/unless}}
      {{#if photoUrl}}
        <img src="{{photoUrl}}" alt="temp" style="width:150px; height:auto;">
      {{/if}}
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-sm-2 control-label">Author</label>
    <div class="col-sm-10">
      <p class="form-control-static" >{{author}}</p>
    </div>
  </div>
  
  <div class="form-group">
    <label for="inputPrice" class="col-sm-2 control-label">Price</label>
    <div class="col-sm-10">
        <p class="form-control-static" ><span>$</span>{{price}}</p>
    </div>
  </div>
  
  <div class="form-group">
    <label for="inputSold" class="col-sm-2 control-label">Sold</label>
    <div class="col-sm-10">
        <p class="form-control-static" >{{#if sold}}Yes{{else}}No{{/if}}</p>
    </div>
  </div>
  
  <div class="pull-right">
      <a href="/delete/{{id}}" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i> delete</a>
      <a href="/update/{{id}}" class="btn btn-warning" ><i class="fa fa-pencil-square-o" aria-hidden="true"></i> update</a>
  </div>
  {{/theBook}}
  <!--DateAdded value cannot be updated -->

  {{#if btn_total}}
  <a href="/" id="btn_total">See total books</a>
  {{/if}}
</form>
